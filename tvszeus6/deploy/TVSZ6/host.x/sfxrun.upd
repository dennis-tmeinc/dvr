#ln -s /var/fw_printenv /var/fw_setenv

# remove old files
#rm -f -r /dav/dvr/*

# start copying files
echo Copying file to /dav, please wait.
cp -rf  * /mnt/nand
rm /mnt/nand/sfxrun
sync


cd /mnt/nand/dvr

echo Firmware update complete. 
echo New Version:
cat firmwareid
